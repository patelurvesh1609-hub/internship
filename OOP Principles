<?php

// Encapsulation
class User
{
    private $name;

    public function setName($name)
    {
        $this->name = $name;
    }

    public function getName()
    {
        return $this->name;
    }
}

// Inheritance
class Person
{
    public function greet()
    {
        return "Hello Person";
    }
}

class Student extends Person
{
    public function role()
    {
        return "I am a Student";
    }
}

// Polymorphism
class Shape
{
    public function area()
    {
        return "No Shape";
    }
}

class Rectangle extends Shape
{
    public function area()
    {
        return "Rectangle Area";
    }
}

class Circle extends Shape
{
    public function area()
    {
        return "Circle Area";
    }
}

// Abstraction
abstract class Bank
{
    abstract public function interest();
}

class SBI extends Bank
{
    public function interest()
    {
        return "SBI Interest 5%";
    }
}

class HDFC extends Bank
{
    public function interest()
    {
        return "HDFC Interest 6%";
    }
}

// OUTPUT
$user = new User();
$user->setName("Amit");

$student = new Student();

$shape1 = new Rectangle();
$shape2 = new Circle();

$bank1 = new SBI();
$bank2 = new HDFC();

echo "Encapsulation: " . $user->getName() . "<br><br>";

echo "Inheritance: " . $student->greet() . " | " . $student->role() . "<br><br>";

echo "Polymorphism: " . $shape1->area() . " , " . $shape2->area() . "<br><br>";

echo "Abstraction: " . $bank1->interest() . " , " . $bank2->interest();
