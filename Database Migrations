PART 5Ô∏è‚É£ ‚Äî FOREIGN KEYS & RELATIONS
7Ô∏è‚É£ Add Foreign Key
Schema::create('posts', function (Blueprint $table) {
    $table->id();
    $table->string('title');

    $table->foreignId('user_id')
          ->constrained()
          ->onDelete('cascade');

    $table->timestamps();
});

